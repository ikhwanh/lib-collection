<div class="flex items-center justify-center h-screen">
  <div class="m-auto w-full max-w-xs">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h2 class="block text-gray-700 text-lg font-bold mb-4">Answers: </h2>
      <ul class="list-none block text-gray-700 text-s">
        <% @wizard.fields.each do |field| %>
          <li><%= field.label %> <span class="font-semibold"><%= field.value.to_s.humanize %></span></li>
        <% end %>
      </ul>
      <div class="mb-6"></div>
      <div class="flex items-center justify-end">
        <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href='<%= new_wizard_form_url %>'>
          Change
        </a>
      </div>
    </div>
  </div>
</div>
